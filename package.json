{
  "name": "pup",
  "private": true,
  "scripts": {
    "start": "meteor --settings settings-development.json",
    "staging": "DEPLOY_HOSTNAME=us-east-1.galaxy-deploy.meteor.com meteor deploy <staging-subdomain>.meteorapp.com --settings settings-staging.json",
    "production": "DEPLOY_HOSTNAME=us-east-1.galaxy-deploy.meteor.com meteor deploy <production-subdomain>.meteorapp.com --settings settings-production.json",
    "test": "jest"
  },
  "dependencies": {
    "@cleverbeagle/seeder": "^1.3.1",
    "b64-to-blob": "^1.2.19",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^1.0.3",
    "chartist": "^0.11.4",
    "chartist-plugin-tooltip": "0.0.11",
    "commonmark": "^0.28.1",
    "core-js": "^2.6.10",
    "file-saver": "^1.3.8",
    "handlebars": "^4.5.3",
    "jquery": "^2.2.4",
    "jquery-validation": "^1.19.3",
    "jszip": "^3.2.2",
    "juice": "^4.3.2",
    "lodash": "^4.17.15",
    "meteor-node-stubs": "^0.3.3",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-addons-pure-render-mixin": "^15.6.2",
    "react-animated-text": "^0.1.4",
    "react-autobind": "^1.0.6",
    "react-beautiful-dnd": "^10.1.1",
    "react-bootstrap": "^0.31.5",
    "react-chartist": "^0.13.3",
    "react-csv-reader": "^1.3.1",
    "react-dates": "^18.5.0",
    "react-dom": "^16.12.0",
    "react-markdown": "^3.6.0",
    "react-router-bootstrap": "^0.24.4",
    "react-router-dom": "^4.3.1",
    "react-select": "^2.4.4",
    "react-stripe-checkout": "^2.6.3",
    "react-tweet-embed": "^1.2.2",
    "simpl-schema": "^0.3.2",
    "typed.js": "^2.0.11"
  },
  "devDependencies": {
    "babel-jest": "^21.2.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.10.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-meteor": "^4.2.2",
    "eslint-plugin-react": "^7.17.0",
    "jest": "^21.2.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "meteor",
      "react"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "browser": true
    },
    "globals": {
      "expect": false
    },
    "rules": {
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "import/extensions": 0,
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to"
          ]
        }
      ],
      "max-len": 0,
      "no-alert": 0,
      "no-console": 0,
      "no-restricted-globals": 0,
      "no-return-assign": [
        "error",
        "except-parens"
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name"
          ]
        }
      ],
      "class-methods-use-this": 0,
      "react/jsx-filename-extension": 0,
      "react/forbid-prop-types": 0
    },
    "settings": {
      "import/resolver": "meteor"
    }
  }
}
